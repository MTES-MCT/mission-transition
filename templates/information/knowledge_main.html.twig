{% extends 'base.html.twig' %}

{% block title %}Comprendre la transition écologique et les aides publiques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('knowledge') }}
{% endblock %}

{% block body %}
    <div class="knowledge fr-container-fluid">
        <nav role="navigation" class="fr-breadcrumb fr-ml-2w" aria-label="vous êtes ici :">
            <button class="fr-breadcrumb__button" aria-expanded="false" aria-controls="breadcrumb-1">Voir le fil d’Ariane</button>
            <div class="fr-collapse" id="breadcrumb-1">
                <ol class="fr-breadcrumb__list">
                    <li>
                        <a class="fr-breadcrumb__link" href="/">Accueil</a>
                    </li>
                    <li>
                        <a class="fr-breadcrumb__link" aria-current="page">Comprendre</a>
                    </li>
                </ol>
            </div>
        </nav>
        <div class="fr-grid-row fr-grid-row--center fr-pb-5w">
            <div class="fr-col-12 mt-text-align-center">
                <h1 class="fr-display-xs color-navy">Comprendre</h1>
            </div>
        </div>

        <div class="fr-container">
            <div class="fr-grid-row fr-grid-row--center">
                <div class="fr-col-12">
                    <div class="fr-tabs">
                        <ul class="fr-tabs__list" role="tablist" aria-label="Compréhension de la Transition Écologique">
                            <li role="presentation">
                                <button id="tabpanel-404" class="fr-tabs__tab fr-fi-checkbox-line fr-tabs__tab--icon-left" tabindex="0" role="tab" aria-selected="true" aria-controls="tabpanel-404-panel">La transition écologique</button>
                            </li>
                            <li role="presentation">
                                <button id="tabpanel-405" class="fr-tabs__tab fr-fi-checkbox-line fr-tabs__tab--icon-left" tabindex="-1" role="tab" aria-selected="false" aria-controls="tabpanel-405-panel">Les aides publiques</button>
                            </li>
                        </ul>
                        <div id="tabpanel-404-panel" class="fr-tabs__panel fr-tabs__panel--selected" role="tabpanel" aria-labelledby="tabpanel-404" tabindex="0">
                            {% include 'information/_knowledge_tee.html.twig' %}
                        </div>
                        <div id="tabpanel-405-panel" class="fr-tabs__panel" role="tabpanel" aria-labelledby="tabpanel-405" tabindex="0">
                            {% include 'information/_knowledge_aid.html.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    {{ encore_entry_script_tags('knowledge') }}
{% endblock %}
