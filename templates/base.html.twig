{% set current_route = app.request.attributes.get('_route') %}
{% set current_route_params = app.request.attributes.get('_route_params') %}

<!DOCTYPE html>
<html lang="{{ app.request.locale }} data-fr-reset">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />

        <meta name="msapplication-tap-highlight" content="no" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="referrer" content="origin" />

        <link rel="apple-touch-icon" href="{{ asset('build/icons/apple-touch-icon.png') }}"><!-- 180×180 -->
        <link rel="icon" href="{{ asset('build/icons/favicon.svg') }}" type="image/svg+xml">
        <link rel="shortcut icon" href="{{ asset('build/icons/favicon.ico') }}" type="image/x-icon"><!-- 32×32 -->
        <link rel="manifest" href="{{ asset('build/icons/manifest.webmanifest') }}" crossorigin="use-credentials">

        {% block stylesheets encore_entry_link_tags('app') %}
        <link rel="canonical" href="{% block meta_canonical current_route ? url(current_route, current_route_params) : '' %}" />

        <title>{% block title %}{% block page_title '' %} | France Transition{% endblock %}</title>
    </head>
    <body class="{% block body_class '' %}">
        <div class="wrapper">
            {% include './_common/header.html.twig' %}

            <main>
                {% block body %}{% endblock %}
            </main>

            {% include './_common/footer.html.twig' %}
        </div>
        {% block javascripts encore_entry_script_tags('app') %}
        <script type="text/javascript" nomodule src="{{ asset('build/static/dsfr.nomodule.min.js') }}"></script>
    </body>
</html>
